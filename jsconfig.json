{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "strict": false,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@api/*": ["./src/api/*"],
      "@common/*": ["./src/common/*"],
      "@constants/*": ["./src/constants/*"],
      "@tests/*": ["./tests/*"],
      "@fixtures/*": ["./tests/_fixtures/*"]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "playwright.config.js",
    "eslint.config.mjs"
  ],
  "exclude": [
    "node_modules",
    "test-results",
    "playwright-report",
    "allure-results",
    "allure-report"
  ],
  "typeAcquisition": {
    "enable": true,
    "include": [
      "@playwright/test",
      "node"
    ]
  }
}
